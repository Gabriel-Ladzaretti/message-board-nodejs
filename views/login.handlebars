<div class="row">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Login</h1>
      {{> messages}}
      {{#if code}}
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
         Please login to complete account verification!
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
      {{/if}}
      <form action="/users/login{{#if code}}?code={{code}}{{/if}}" method="POST">
        <div class="mb-3">
          <label class="form-label" for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary d-block w-100">
          Login
        </button>
      </form>
      <p class="mt-4">No Account? <a href="/users/register">Register</a></p>
    </div>
  </div>
</div>