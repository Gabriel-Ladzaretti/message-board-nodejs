<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Add a Message</h1>
      {{> messages}}
      <form action="/api/messages" method="POST">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control"
            placeholder="Enter Title"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Body</label>
          <textarea
            style="resize: none;"
            rows="6"
            cols="50"
            id="body"
            name="body"
            class="form-control"
            placeholder="Enter Blog body"
          ></textarea>
        </div>
        <fieldset class="mb-3">
          <div class="form-check form-switch">
            <input
              class="form-check-input"
              name="private"
              type="checkbox"
              value="true"
              id="private"
              checked
            />
            <label class="form-check-label" for="private">Make this message <strong>private</strong>.</label>
          </div>
        </fieldset>
        <fieldset class="form-group mb-3">
          <p class="form-label">Select Color</p>
          <div class="d-flex">
            <div class="form-check form-check-inline">
              <input
                type="radio"
                class="form-check-input bg-Primary"
                name="color"
                value="text-white bg-Primary "
                checked=""
              />
            </div>
            <div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-secondary"
                  name="color"
                  value="text-white bg-secondary"
                />
              </label>
            </div>
            <div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-success"
                  name="color"
                  value="text-white bg-success"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Danger"
                  name="color"
                  value="text-white bg-Danger"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Warning"
                  name="color"
                  value="text-white bg-Warning"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Info"
                  name="color"
                  value="text-white bg-Info"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Light"
                  name="color"
                  value="bg-Light"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-dark"
                  name="color"
                  value="text-white bg-dark"
                />
              </label>
            </div>
          </div>
        </fieldset>
        <button type="submit" class="btn btn-primary d-block w-100">
          Post
        </button>
      </form>
    </div>
  </div>
</div>