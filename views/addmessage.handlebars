<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Add a Message</h1>
      {{> messages}}
      <form action="/api/messages" method="POST">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control"
            placeholder="Enter Title"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Body</label>
          <textarea
            style="resize: none;"
            rows="6"
            cols="50"
            id="body"
            name="body"
            class="form-control"
            placeholder="Enter Blog body"
          ></textarea>
        </div>
        {{! <div class="mb-3">
          <div class="form-group">
            <label for="color" class="form-label">Select Color</label>
            <select class="form-select" id="color" name="color">
              <option class="bg-info">1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div> }}
        <fieldset class="form-group mb-3">
          <p class="form-label">Select Color</p>
          <div class="d-flex">
            <div class="form-check form-check-inline">
              <input
                type="radio"
                class="form-check-input bg-Primary"
                name="color"
                value="text-white bg-Primary "
                checked=""
              />
            </div>
            <div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Secondary"
                  name="color"
                  value="text-white bg-Secondary"
                />
              </label>
            </div>
            <div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Success"
                  name="color"
                  value="text-white bg-Success"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Danger"
                  name="color"
                  value="text-white bg-Danger"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Warning"
                  name="color"
                  value="text-white bg-Warning"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Info"
                  name="color"
                  value="text-white bg-Info"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-Light"
                  name="color"
                  value="bg-Light"
                />
              </label>
            </div><div class="form-check form-check-inline">
              <label class="form-check-label">
                <input
                  type="radio"
                  class="form-check-input bg-dark"
                  name="color"
                  value="text-white bg-dark"
                />
              </label>
            </div>
          </div>
        </fieldset>

        <button type="submit" class="btn btn-primary d-block w-100">
          Post
        </button>
      </form>
    </div>
  </div>
</div>