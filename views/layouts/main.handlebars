  </footer>
  {{! Modal }}
  <div class="modal fade" id="stats-reset">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Stats Reset Confirmation.</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true"></span>
          </button>
        </div>
        <div class="modal-body">
          <p>Reset Stats data?</p>
        </div>
        <div class="modal-footer">
          <a
            type="button"
            class="btn btn-primary"
            href="/{{analytics}}/stats/reset"
          >Reset</a>
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Cancel</button>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="emails-reset">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Mail Reset Confirmation.</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true"></span>
          </button>
        </div>
        <div class="modal-body">
          <p>Reset Email Backup?</p>
        </div>
        <div class="modal-footer">
          <a
            type="button"
            class="btn btn-primary"
            href="/{{analytics}}/emails/reset"
          >Reset</a>
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Cancel</button>
        </div>
      </div>
    </div>
  </div>
